
@model List<GetDeveloperVM>

@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Developer Table</h4>
            <p class="card-description">
                <a class="btn btn-success" asp-action="create">Create</a>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                <p>Id</p>
                            </th>
                            <th>
                                <p>Image</p>
                            </th>
                            <th>
                                <p>Name</p>
                            </th>
                            <th>
                                <p>Position name</p>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetDeveloperVM developerVM in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/images/@developerVM.Image" />
                                </td>
                                <td>
                                    @developerVM.Name
                                </td>
                                <td>
                                    @developerVM.PositionName
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="update" asp-route-id="@developerVM.Id"><i class="mdi mdi-update">Update</i></a>
                                    <a class="btn btn-danger" asp-action="delete" asp-route-id="@developerVM.Id"><i class="mdi mdi-delete">Delete</i></a>
                                    <a class="btn btn-primary" asp-action="detail" asp-route-id="@developerVM.Id"><i class="mdi mdi-information">Detail</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>